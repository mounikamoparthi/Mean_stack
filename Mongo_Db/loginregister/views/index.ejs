<html>
    <head>
       <title>Login Form</title>
        <!--<link rel="stylesheet" href="{% static 'cats_app/css/style.css' %}"-->
   
    </head>
    <body>
        <h1> Registration Form </h1>
        <% if (typeof(error) != 'undefined') { %>
      <p class="error"><%= error %></p>
        <% } else if (typeof(errors) != 'undefined') { %>
        <% for (let x in errors.errors) { %>
            <p class="error"><%= errors.errors[x] %></p>
        <% } %>
        <% } %>
        <div id = "register">
            <form action= "/register" method ="post">
            <p>
            <label for="first_name">FirstName:</label>
            <input type="text" id ="firstname" name="first_name">
            </p>
            <p>
            <label for="last_name">LastName:</label>
            <input type="text" id ="lastname" name="last_name">
            </p>
            <p>
            <label for="emailid">Email Id:</label>
            <input type="email" id ="emailid" name="emailid">

            </p><p>
            <label for="birthday"> Birthday: </label>
            <input type="date" name="birthday" value="">
            </p>
            <p>
            <label for="password">Password:</label>
            <input type="password" id ="password" name="password" value="Asdfgh!12">
            </p>
            <p>
            <label for="reenterpassword">Reenter Password:</label>
            <input type="password" id ="password" name="reenterpassword">
            </p><p>
            <input type = "hidden" name = "action" value="Register">
            <input  type="submit" value="Register">
            </form>
            <br> 
            <a href= "/login"> Already Registered? Log in here </a>
        </div>
        
    </body>
</html>
